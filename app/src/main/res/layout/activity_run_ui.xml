<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/logoText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JogJoy"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/goalDistance"
        android:layout_width="114dp"
        android:layout_height="39dp"
        android:layout_centerHoriuontal="true"
        android:text="Ziel: 5 km"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="131dp" />

    <TextView
        android:id="@+id/distanceCurrent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distanz:"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="376dp" />

    <TextView
        android:id="@+id/timeCurrent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zeit:"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="190dp"
        tools:layout_editor_absoluteY="442dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="59dp"
        android:layout_height="63dp"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="220dp" />

    <Button
        android:id="@+id/endRunBT"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="Lauf beenden"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="619dp" />

    <Button
        android:id="@+id/stop_continue"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="Stop/Continue"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="546dp" />
</androidx.constraintlayout.widget.ConstraintLayout>